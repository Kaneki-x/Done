<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_done_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen5"
    android:paddingBottom="@dimen/dimen5">


    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/rpb_done_rate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:backgroundPadding="@dimen/dimen5"
        app:backgroundRadius="@dimen/dimen5"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        app:backgroundColor="@color/color_bg_done_item"
        app:max="100" />


    <TextView
        android:id="@+id/tv_done_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen10"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp18"
        android:textColor="@color/color_text_default"
        android:layout_alignLeft="@id/rpb_done_rate"/>

    <TextView
        android:id="@+id/tv_done_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="@dimen/dimen5"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp12"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@id/rpb_done_rate"
        android:layout_alignLeft="@id/rpb_done_rate"/>

    <TextView
        android:id="@+id/tv_done_achieve_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp18"
        android:textColor="@color/color_text_default"
        android:layout_alignRight="@id/rpb_done_rate"/>

</RelativeLayout>