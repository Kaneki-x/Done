<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_done_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen10"
    android:paddingBottom="@dimen/dimen10">

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/rpb_done_rate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        app:rcRadius="@dimen/dimen5"
        app:rcBackgroundColor="@color/color_bg_done_item" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_alignLeft="@id/rpb_done_rate"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_done_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_text_default"/>

        <TextView
            android:id="@+id/tv_done_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen1"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp10"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_done_achieve_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen15"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:textSize="@dimen/sp14"
        android:textColor="@color/color_text_default"
        android:layout_alignRight="@id/rpb_done_rate"/>

</RelativeLayout>